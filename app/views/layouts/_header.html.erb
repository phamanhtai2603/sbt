<header class="navbar navbar-fixed-top
navbar-inverse">
  <div class="container">
  <%= link_to "Booking Tour", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home"), root_path %></li>
        <li><%= link_to t(".donetours"), donetours_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t ".account" %> <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), root_path %></li>
              <li><%= link_to t(".setting"), root_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".logout"), sessions_path, method: :delete %>
              </li>
            </ul>
          </li>
          <% if admin_acount? %>
            <li><%= link_to t("tour_manage"), tours_path %></li>
            <li><%= link_to t("category_manage"), categories_path %></li>
            <li><%= link_to t("booked_manage"), bookings_path %></li>
            <li><%= link_to t("revenue"), revenue_index_path %></li>
          <% else %>
            <li><%= link_to t("userbooked_manage"), user_bookings_path %></li>
          <% end %>
          <li><%= link_to t(".logout"), logout_path, method: :delete %></li>
        <% else %>
          <li><%= link_to t(".login"), sessions_path %></li>
          <li><%= link_to t(".signin"), "#" %></li>
        <% end %>
        <li>
          <div class="language">
            <%= image_tag "usa.png" %> <%= link_to t(".en"), locale:"en" %> |
            <%= image_tag "vietnam.png" %> <%= link_to t(".vi"), locale:"vi" %>
          </div>

        </li>
      </ul>
    </nav>
  </div>
</header>
